@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<link rel="stylesheet" href="~/css/UserLoginRegisterStyle.css" asp-append-version="true" />

 <div class="box">
	<form  id="account" method="post">	
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<span class="text-center"><a class="back-home" asp-action="Index" asp-controller="Home">Log in</a></span>
	<div class="input-container">	
		<input asp-for="Input.UserName" type="text" autocomplete="username"/>
		<label>UserName</label>
	</div>
	<div class="input-container">		
		<input asp-for="Input.Password" type="password" />
		<label>Password</label>
	</div>
	
	<div>
		 <span asp-validation-for="Input.UserName" class="text-danger"></span>
		<span asp-validation-for="Input.Password" class="text-danger"></span>
	</div>
		<button type="submit" class="btn-submit">submit</button>
</form>	
<br />
<div class="sign-up-link">
	<a asp-area="Identity" asp-page="/Account/Register">Kliknij tutaj aby sie zarejestrować </a>

</div>
</div>

























