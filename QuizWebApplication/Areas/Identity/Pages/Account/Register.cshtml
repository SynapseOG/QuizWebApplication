@page
@model RegisterModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> _userManager
@inject RoleManager<IdentityRole> _roleManager

@{
    ViewData["Title"] = "Register";
    
     
}
<link rel="stylesheet" href="~/css/UserLoginRegisterStyle.css" asp-append-version="true" />

 <div class="box">
	<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">	
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<span class="text-center"><a class="back-home" asp-action="Index" asp-controller="Home">Register</a></span>
	<div class="input-container">
		<input asp-for="Input.Email"type="email" />
		<label>Email</label>		
	</div>
	<div class="input-container">	
		<input asp-for="Input.UserName" type="text"/>
		<label>UserName</label>
	</div>
	<div class="input-container">		
		<input asp-for="Input.Password" type="password" />
		<label>Password</label>
	</div>
	<div class="input-container">		
		<input asp-for="Input.ConfirmPassword" type="password" />
		<label>ConfirmPassword</label>
	<div>
	</div>
        
    
		  <span asp-validation-for="Input.Email" class="text-danger"></span>
		 <span asp-validation-for="Input.UserName" class="text-danger"></span>
		<span asp-validation-for="Input.Password" class="text-danger"></span>
		<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
	</div>
		<button type="submit" class="btn-submit" id="button" onclick="SetRole()">submit</button>
</form>	
<br />
<div class="sign-up-link">
	<a asp-area="Identity" asp-page="/Account/Login">Kliknij tutaj aby sie zalogować </a>

</div>
</div>




        
        



